@model IEnumerable<ImDone.Sala>

@{
    ViewBag.Title = "Index";
}

<h2>Salas</h2>

<form method="get" style="float:right; position:absolute; left:1088px; top:150px">
    <input type="text" id="Criterio" name="Criterio" />
    <input type="submit" id="cmdBuscar" value="Buscar" />
</form>

<br />

<p>
    @Html.ActionLink("Exportar Excel", "exportaExcel", "Salas", null, new { @class = "btn btn-danger" })



    @Html.ActionLink("Crear nuevo", "Create", "Salas", null, new { @class = "btn btn-primary" })

</p>

<table class="table">
    <tr>
        <th>
            Sala
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cine.nombre_cine)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                Sala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cine.nombre_cine)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_sala }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_sala }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_sala })
            </td>
        </tr>
    }

</table>
